<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="id.autodhil.koramvvm.content.detail.DetailViewModel" />
        <variable
            name="item"
            type="id.autodhil.koramvvm.content.model.Komik" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="10dip"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/samul_detail"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/maxresdefault"
            android:scaleType="fitXY"
            android:tint="#6F000000"
            />

            <TextView
                android:elevation="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintBottom_toBottomOf="@id/view"
                android:layout_marginStart="16dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="@{item.title}"
                android:fontFamily="@font/montserrat"/>
            <View
                android:background="@drawable/border_blue"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/samul_detail"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                android:outlineSpotShadowColor="@android:color/darker_gray"/>


            <ImageView
                android:id="@+id/btn_about"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintBottom_toBottomOf="@id/view"
                android:layout_marginEnd="16dp"
                android:src="@drawable/abo"
                android:elevation="1dp"/>
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toStartOf="@id/btn_about"
                android:layout_marginEnd="@dimen/s_16dp"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintBottom_toBottomOf="@id/view"
                android:background="@drawable/save"
                android:checked="@{viewModel.check}"
                android:button="@null"
                android:elevation="1dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_8dp"
                android:nestedScrollingEnabled="true"
                visible="@{viewModel.visibility}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/ep_item"
                android:layout_marginBottom="@dimen/s_8dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                visible="@{viewModel.visibility1}"
                android:padding="16dp"
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:background="@drawable/shadow_white_16dp"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/back"
                    android:background="@drawable/border_blue"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Genre"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/judul_genre"
                    />
                <TextView
                    android:id="@+id/txt_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judul_genre"
                    android:text="@{item.genre}"
                    android:layout_marginTop="8dp"
                    android:textColor="#52575C"
                    android:fontFamily="@font/robotoreg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_genre"
                    android:text="Sinopsis"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/judul_sinop"
                    />
                <TextView
                    android:id="@+id/txt_komik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judul_sinop"
                    android:text="@{item.sinopsis}"
                    android:layout_marginTop="8dp"
                    android:textColor="#52575C"
                    android:fontFamily="@font/robotoreg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:text="Budaya Dalam Komik"
                    app:layout_constraintTop_toBottomOf="@id/txt_komik"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/judul_list"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bufaya"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judul_list"
                    tools:listitem="@layout/list_budaya"
                    android:nestedScrollingEnabled="true"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>



